---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";
import CircleButton from "../components/CircleButton.astro";
import ChatBox from "../components/ChatBox.jsx";

const { pageTitle } = Astro.props;
---

<html>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
    />
    <ViewTransitions />
  </head>
  <div id="sidebar">
    <button id="close-btn" onclick="toggleSideBar()">
      <i class="fa fa-xmark"></i>
    </button>
    <ul>
      <li><a href="/">Home</a></li>
      <li><a href="/about/" data-astro-reload>About</a></li>
      <li><a href="/blog/">Blog</a></li>
      <li><a href="/tags">Tags</a></li>
    </ul>
  </div>
  <body>
    <div class="container">
      <Header />
      <h1 transition:animate="slide">{pageTitle}</h1>
      <slot />
      <CircleButton />
      <ChatBox client:load />
      <Footer />
    </div>

    <script>
      import "../scripts/menu.js";
    </script>
  </body>
  <script is:inline>
    function toggleSideBar() {
      document.getElementById("sidebar").classList.toggle("active");
    }
  </script>
  <style>
    :global(.dark) #sidebar ul li a {
      color: white;
    }
    #sidebar {
      display: flex;
      flex-direction: column;
    }
    #close-btn {
      width: 24px;
      height: 24px;
      margin: 8px;
      position: relative;
      align-self: flex-end;
    }
    #close-btn i {
      color: #000;
    }
  </style>
</html>
